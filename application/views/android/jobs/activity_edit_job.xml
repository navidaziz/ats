
<TextView
android:id="@+id/title_jobs"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceLarge"
android:text="Edit"
android:textStyle="normal|bold"
android:textAlignment="center"
android:textColor="@android:color/background_light"
android:layout_centerHorizontal="true"
android:textSize="40dp"
android:paddingTop="60dp" />
		
						<EditText
						android:id="@+id/job_source_id"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Job Source Id"
						android:inputType="textEditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/jobs"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/job_title"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Job Title"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/job_source_id"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/job_detail"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Job Detail"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/job_title"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/job_end_date"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Job End Date"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/job_detail"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/job_image"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Job Image"
						android:inputType="textEditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/job_end_date"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/job_summary"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Job Summary"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/job_image"
						android:layout_marginTop="42dp"/>
						
						
<Button
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Update"
android:id="@+id/btn_update_jobs"
android:background="@xml/btnselector"
android:textColor="@android:color/background_light"
/>
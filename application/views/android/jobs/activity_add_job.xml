
<TextView
android:id="@+id/title_jobs"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceLarge"
android:text="Add"
android:textStyle="normal|bold"
android:textAlignment="center"
android:textColor="@android:color/background_light"
android:layout_centerHorizontal="true"
android:textSize="40dp" />
		
						<EditText
						android:id="@+id/job_source_id"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Job Source Id"
						android:inputType="EditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:layout_marginTop="10dp"
						android:layout_below="@+id/jobs"
						android:layout_alignParentLeft="true"
        				android:layout_alignParentStart="true" 
						/>
						
						
						<EditText
						android:id="@+id/job_title"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Job Title"
						android:inputType="text"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:layout_marginTop="10dp"
						android:layout_below="@+id/job_source_id"
						android:layout_alignParentLeft="true"
        				android:layout_alignParentStart="true" 
						/>
						
						
						<EditText
						android:id="@+id/job_detail"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Job Detail"
						android:inputType="text"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:layout_marginTop="10dp"
						android:layout_below="@+id/job_title"
						android:layout_alignParentLeft="true"
        				android:layout_alignParentStart="true" 
						/>
						
						
						<EditText
						android:id="@+id/job_end_date"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Job End Date"
						android:inputType="text"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:layout_marginTop="10dp"
						android:layout_below="@+id/job_detail"
						android:layout_alignParentLeft="true"
        				android:layout_alignParentStart="true" 
						/>
						
						
						<EditText
						android:id="@+id/job_image"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Job Image"
						android:inputType="EditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:layout_marginTop="10dp"
						android:layout_below="@+id/job_end_date"
						android:layout_alignParentLeft="true"
        				android:layout_alignParentStart="true" 
						/>
						
						
						<EditText
						android:id="@+id/job_summary"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Job Summary"
						android:inputType="text"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:layout_marginTop="10dp"
						android:layout_below="@+id/job_image"
						android:layout_alignParentLeft="true"
        				android:layout_alignParentStart="true" 
						/>
						
						
<Button
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Add"
android:id="@+id/btn_add_jobs"
android:textColor="@android:color/background_light"
android:layout_below="@+id/job_summary"
/>